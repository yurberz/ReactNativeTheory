{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "outDir": "dist",
    "sourceMap": true,
    "watch": true
  },
  "include": ["TypeScript/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
